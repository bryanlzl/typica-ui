{
    "compilerOptions": {
        "baseUrl": ".",

        "jsx": "react-jsx",
        "outDir": "./dist",

        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,

        "skipLibCheck": true,

        "noUnusedLocals": false,
        "noUnusedParameters": false,

        "module": "ESNext",
        "moduleResolution": "bundler",
        "target": "es2022",
        "lib": ["ES2023", "DOM", "DOM.Iterable"],

        "types": ["vite/client"]
    },
    "include": ["src/**/*", "./assets.d.ts"]
}
